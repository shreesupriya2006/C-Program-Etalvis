/*Get multiple numbers from the user and store them in an array. Stop when the number is 0. Print the total numbers entered by 
the user and print the sum of numbers.*/
#include <stdio.h>
int main()
{
    int n,count=0,sum=0,i,j=0;
    printf("Enter no of digit:");
    scanf("%d",&n);
    int a[n];
    int b[n];
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    {
        if(a[i]==0)
        goto end;
        else{
            //b[j]=a[i]; no need to store in another array
            //j++; j and count are doing samething
            count++;}
    }
    end:
    for(i=0;i<n;i++)
    {
        sum=sum+a[i];
    }
    printf("count:%d\nsum:%d",count,sum);
}
